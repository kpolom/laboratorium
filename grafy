#include <stdio.h>
#include <stdlib.h>

int main(void)
{
int a, z;
int c = 0;
int b = 0;
int x = 0;
int w = 0;
int d = 0;

    printf("Podaj ilosc wierzcholkow grafu: \n");
    scanf("%d", &a);
    int tab[a];


    while(c <= a) {
            x=x+1;
                    while (c <= a) {
                        b=c+1;
                        printf("Czy wierzcholek %d jest polaczony z wierzcholkiem: %d (1-tak, 0-nie)", x, b);
                        scanf("%d", &z);

                        if(z == 1) {
                            d=d+1;
                            tab[w] = d;
                        }
                        if(z == 0) {
                            tab[w] = d;
                        }

                        printf("%d\n", tab[w]);
                          c=c+1;
                        if(c == a ) {
                            w=w+1;
                            x=x+1;
                            c=0;
                            d=0;
                            b=0;
                        }
                        if(x == a + 1) {
                            c=a+1;
                            x=x+1;
                        }

                    }
    }

    printf("Stopnie wierzcholkow: \n");
    for (w=0; w<a; w++)

    printf("\n %d\n ",tab[w]);


    return 0;
}
